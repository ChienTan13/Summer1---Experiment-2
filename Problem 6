#include <iostream>
#include <conio.h>
using namespace std;

int main()
{
	int num1, sum = 0;
	b:
	cout << "\n";
	cout << "\n";
	cout << "Please enter a number: ";
	cin >> num1;
	
	for (int i=1; i<=num1; i++)
	{
		sum = sum + i;
		
	}
	
	if (num1 > 0)
	{
	cout << "The sum of all whole numbers from 1 to " << num1 << " is: " << sum;
	    goto b;
	}
	
	
	else if (num1 < 0)
	{
	cout << "The sum of all whole numbers from 1 to " << num1 << " is: " << sum;
	goto b;
	}
	
	else 
	{
		cout << "Thank you!";
	}
	
_getch();
return 0;
}
